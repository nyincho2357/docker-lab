pipeline {
    agent any

    environment {
        IMAGE_NAME = "nyincho2357/my-python-app"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'advanced-pipeline', url: 'https://github.com/nyincho2357/docker-lab.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('myapp') {
                    sh 'docker build -t $IMAGE_NAME .'
                }
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker run -d -p 5000:5000 --name test-app $IMAGE_NAME'
                sh 'sleep 5'
                sh 'curl http://localhost:5000'
            }
        }

        stage('Cleanup') {
            steps {
                sh 'docker stop test-app || true'
                sh 'docker rm test-app || true'
            }
        }
    }
}
